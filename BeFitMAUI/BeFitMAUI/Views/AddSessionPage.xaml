<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BeFitMAUI.ViewModels"
             x:Class="BeFitMAUI.Views.AddSessionPage"
             Title="Trening">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Anuluj" Command="{Binding CancelCommand}" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Spacing="20" Padding="20">
        <Label Text="Czas rozpoczęcia" FontSize="Medium" />
        <DatePicker Date="{Binding StartTime}" />
        <TimePicker Time="{Binding StartTime}" /> 
        
        <Label Text="Czas zakończenia" FontSize="Medium" />
        <DatePicker Date="{Binding EndTime}" />
        <TimePicker Time="{Binding EndTime}" />

        <Button Text="Zapisz" Command="{Binding SaveCommand}" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
