<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BeFitMAUI.ViewModels"
             xmlns:models="clr-namespace:BeFitMAUI.Models"
             x:Class="BeFitMAUI.Views.SessionsPage"
             Title="Training Sessions">
    
    <Grid RowDefinitions="Auto, *">
        <Button Text="Add Session" Command="{Binding AddSessionCommand}" Margin="10" />
        
        <RefreshView Grid.Row="1" IsRefreshing="{Binding IsLoading}" Command="{Binding LoadSessionsCommand}">
            <CollectionView ItemsSource="{Binding Sessions}" SelectionMode="Single" SelectionChangedCommand="{Binding SessionSelectedCommand}" SelectionChangedCommandParameter="{Binding Source={RelativeSource Self}, Path=SelectedItem}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding StartTime, StringFormat='{0:g}'}" FontAttributes="Bold" />
                                <Label Text="{Binding EndTime, StringFormat='End: {0:t}'}" FontSize="Small" />
                                <Label Text="{Binding Exercises.Count, StringFormat='Exercises: {0}'}" FontSize="Small" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                     <Label Text="No sessions found. Start training!" HorizontalOptions="Center" VerticalOptions="Center" />
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
